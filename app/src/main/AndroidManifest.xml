<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.takeaction">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.location.gps" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="false"
        android:label="@string/app_name"
        android:orientation="vertical"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name=".authentication.RegisterActivity"
            android:theme="@style/AppThemeNoBar"
            />

        <activity
            android:name=".splash.Splash"
            android:theme="@style/AppThemeNoBar"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".intro.Slider"
            android:theme="@style/AppThemeNoBar"
            android:noHistory="true" />
        <activity android:name=".MainActivity" />
        <activity android:name=".authentication.LoginActivity"
            android:theme="@style/AppThemeNoBar"
            android:exported="true" />
        <activity android:name=".incidents.ReportIncidentListActivity" android:exported="true"/>
        <activity android:name=".incident.ReportIncidentActivity" android:exported="true"/>
        <activity
            android:name=".homemap.HomeMapActivity"
            android:exported="true" />
        <activity android:name=".ProfileActivity"
            android:exported="true" />
        <activity android:name=".ShowPopUp" />
        <activity android:name=".OpenCamera" />
        <activity android:name=".incidents.IncidentDetails" android:exported="true"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
    </application>

</manifest>