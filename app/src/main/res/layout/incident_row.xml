<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <View
            android:id="@+id/imageIc"
            android:layout_width="10dip"
            android:layout_height="fill_parent"
            android:background="#6DAAE9"
            android:src="@drawable/ic_action_name" />

        <ImageView
            android:id="@+id/imageIv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_action_name"
            android:contentDescription="@string/incident_title" />

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/imageIv"
            android:layout_toRightOf="@+id/imageIv"
            android:text="@string/incident_title"
            android:textColor="#000"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/descriptionTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleTv"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/imageIv"
            android:text="@string/incident_description"
            android:textColor="#a9a9a9"
            android:textSize="18sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>